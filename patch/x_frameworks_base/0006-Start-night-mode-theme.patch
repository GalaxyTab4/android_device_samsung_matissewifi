+    <!-- The color of the legacy notification background -->
+    <color name="notification_legacy_background_color">#ff262626</color>
+    <!-- The color of the material notification background -->
+    <color name="notification_material_background_color">#ff262626</color>
+    <!-- The color of the material notification background when dimmed -->
+    <color name="notification_material_background_dimmed_color">#ff262626</color>
+    <!-- The color of the material notification background when low priority -->
+    <color name="notification_material_background_low_priority_color">#ff262626</color>
